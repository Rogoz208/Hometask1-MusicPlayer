<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context=".MusicPlayerActivity">

    <ImageButton
        android:id="@+id/previous_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/baseline_skip_previous_24"
        android:contentDescription="@string/previous_track_button" />

    <ImageButton
        android:id="@+id/play_pause_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/baseline_play_circle_24"
        android:contentDescription="@string/play_or_pause_button" />

    <ImageButton
        android:id="@+id/next_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/baseline_skip_next_24"
        android:contentDescription="@string/next_track_button" />

    <ImageButton
        android:id="@+id/stop_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/baseline_stop_circle_24"
        android:contentDescription="@string/stop_button" />

</LinearLayout>